<flex fn="build_main" lens="MyAppState">
    <label>Hello Druid!</label>
    <!-- 'input type=text' same as 'textbox' -->
    <input type="text" lens="MyAppState::name" placeholder=""/>
    <switch lens="MyAppState::flag"></switch>
    <button>OK</button>
</flex>

